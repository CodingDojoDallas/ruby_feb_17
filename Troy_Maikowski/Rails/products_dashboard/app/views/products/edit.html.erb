<h1>Editing product</h1>

<form action="/products/<%= @product.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <div>
    Category: <select name="product[category]">
      <% @categories.each do |category| %>
        <option value="<%= category.id %>"><%= category.name %></option>
      <% end %>
    </select>
  </div>
  <br>
  <div>
    Name: <input type="text" name="product[name]" value="<%= @product.name %>">
  </div>
  <br>
  <div>
    Description: <textarea name="product[description]"><%= @product.description %></textarea>
  </div>
  <br>
  <div>
    Price: <input type="number" step="0.01" name="product[pricing]" value="<%= @product.pricing %>">
  </div>
  <br>
  <input type="submit" value="Update">
</form>
<br>
<a href="/products/">Back</a>
