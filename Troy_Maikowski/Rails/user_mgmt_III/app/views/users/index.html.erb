<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email_address %></td>
        <td>
          <a href="/users/<%= user.id %>">Show</a> |
          <a href="/users/<%= user.id %>/edit">Edit</a> |
          <a href= "/users/<%= user.id %>" data-method='delete'>Destroy</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<a href="/users/new">New User</a>
