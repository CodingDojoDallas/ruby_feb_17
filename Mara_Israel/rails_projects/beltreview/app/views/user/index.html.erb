<h1>Register</h1>

<%= form_for @user, url:'/user' do |f| %>
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	First Name: <%= f.text_field :first_name %><br>
	Last Name: <%= f.text_field :last_name %><br>
	Email: <%= f.text_field :email %><br>
	Location: <%= f.text_field :location_city %> <%= f.select :location_state, options_for_select([['AL', 'AL'],['AK', 'AK'],['AZ', 'AZ'],['AR', 'AR'],['CA', 'CA'], ['CO', 'CO'], ['CT', 'CT']]) %><br>
	Password: <%= f.password_field :password %><br>
	Password Confirmation: <%= f.password_field :password_confirmation %><br>
	<%= f.submit "Register" %>
<% end %>
<br>
<% if @user.errors.full_messages.any? %>
	<% @user.errors.full_messages.each do |error| %>
    <%= error %><br />
  <% end %>
<% end %>

<br>
<br>
<h1>Login</h1>
<%= form_for :user, url:'/login' do |f| %>
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	Email: <%= f.text_field :email %><br>
	Password: <%= f.password_field :password %><br>
	<%= f.submit "Login" %>
<% end %>
<br>
<% flash.each do |key, msg| %>
  <%= content_tag :div, msg, :id => key %>
<% end %>